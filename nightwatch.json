{
  "src_folders": ["./tests/"],
  "test_settings": {
    "default": {
			"selenium_host": "${SAUCELABS_HOST}",
			"selenium_port": "${SAUCELABS_PORT}",
			"username": "${SAUCELABS_USERNAME}",
			"access_key": "${SAUCELABS_ACCESS_KEY}",
